#!/bin/bash
# vim: set ft=sh

set -e

RUN_DIR=/var/vcap/sys/run/insert-cloud-props
LOG_DIR=/var/vcap/sys/log/insert-cloud-props
PIDFILE=$RUN_DIR/insert-cloud-props.pid

case $1 in

  start)
    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    mkdir -p $LOG_DIR
    chown -R root:root $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/jobs/insert-cloud-props/bin/patch-cloud-props.sh \
      1>>$LOG_DIR/insert-cloud-props.stdout.log \
      2>>$LOG_DIR/insert-cloud-props.stderr.log

    ;;

  stop)
    if [ -f $PIDFILE ]; then
      kill -9 `cat $PIDFILE` || true
      rm -f $PIDFILE
    fi
    ;;

  *)
    echo "Usage: $0 {start|stop}"

    ;;
esac
